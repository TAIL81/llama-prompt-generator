# OPENAI_API_KEY=***REMOVED***
# OPENAI_BASE_URL=https://openrouter.ai/api/v1

# ===== Groq Chat Completions API =====
# 必須: APIキー
GROQ_API_KEY=
# 任意: ベースURL (デフォルト: https://api.groq.com/openai/v1)
GROQ_API_BASE=https://api.groq.com/openai/v1
# 任意: APIバージョン (クエリに付与、未指定可)
GROQ_API_VERSION=
# 任意: 使用モデル (デフォルト: openai/gpt-oss-120b)
GROQ_MODEL=openai/gpt-oss-120b
# 任意: 推論強度 (GPT-OSS 20B/120B で有効) low | medium | high
GROQ_REASONING_EFFORT=medium
# 任意: 最大生成トークン数 (モデル上限に応じて調整)
GROQ_MAX_COMPLETION_TOKENS=32766

# ===== リトライ/コスト見積/ログ =====
# APIリトライ最大回数
MAX_RETRIES=3
# リトライの指数バックオフ底
RETRY_BACKOFF_BASE=2.0
# トークン概算: 1トークンあたりの平均文字数
TOKEN_CHARS_PER_TOKEN=4.0
# 入力/出力 100万トークン単価(USD)の概算（必要に応じて設定）
PROMPT_PRICE_PER_MILLION=0.0
COMPLETION_PRICE_PER_MILLION=0.0
# 使用量ログの出力先
USAGE_LOG_PATH=logs/chat_usage.jsonl

# 既存設定
LANGUAGE=ja
